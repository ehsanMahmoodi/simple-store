<div
  class="page-banner-area bg-black bg-img"
  data-background="/assets/images/banner-bg-shape.png"
>
  <div class="container mw-1680">
    <div class="page-banner-content">
      <h2>ثبت نام</h2>
      <ul
        class="ps-0 mb-0 list-unstyled justify-content-center page-breadcrumb d-flex flex-wrap gap-4"
      >
        <li><a href="/">صفحه اصلی</a></li>
        <li><span class="active">ثبت نام</span></li>
      </ul>
    </div>
  </div>
</div>
<div class="sign-up-area ptb-100">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <div class="sign-in-img">
          <img src="/assets/images/sign-up-img.png" alt="sign-up-img" />
        </div>
      </div>
      <div class="col-lg-6">
        <div class="authentication-form">
          <ul class="ps-0 list-unstyled d-flex authentication-nav">
            <li><a href="/auth/login">ورود</a></li>
            <li><a href="/auth/register" class="active">ثبت نام</a></li>
          </ul>
          <h3>ایجاد حساب کاربری</h3>
          <form action="/auth/register" method="post">
            <div class="form-group mb-4">
              <input
                type="text"
                class="form-control"
                name="fullname"
                placeholder="نام"
              />
            </div>
            <div class="form-group mb-4">
              <input
                type="email"
                class="form-control"
                placeholder="پست الکترونیک"
                name="email"
              />
            </div>
            <div class="form-group mb-4">
              <div class="password-wrapper">
                <input
                  type="password"
                  class="form-control"
                  id="password"
                  placeholder="رمز عبور"
                  name="password"
                /><i
                  class="fa fa-eye-slash password-toggle-icon"
                  aria-hidden="true"
                ></i>
              </div>
            </div>
            <div class="form-group mb-4">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="flexCheckDefault"
                /><label class="form-check-label" for="flexCheckDefault">
                  موافق به<a href="/terms-conditions"> شرایط و ضوابط </a> و
                  <a href="/privacy-policy">سیاست حفظ حریم خصوصی</a></label
                >
              </div>
            </div>
            <div class="form-group mb-4">
              <button type="submit" class="main-btn">ثبت نام</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
