<div class="sign-in-area ptb-100">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6">
        <div class="sign-in-img">
          <img src="/assets/images/sign-in-img.png" alt="sign-in-img" />
        </div>
      </div>
      <div class="col-lg-6">
        <div class="authentication-form">
          <ul class="ps-0 list-unstyled d-flex authentication-nav">
